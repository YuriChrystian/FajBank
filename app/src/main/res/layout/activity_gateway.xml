<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gateway"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GatewayActivity">

    <View
        android:id="@+id/gateway_view_white"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/gateway_view_yellow"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="#E8AF08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gateway_view_white"
        />

    <TextView
        android:id="@+id/gateway_textview_frase"
        style="@style/FajBank.Text.Title.Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Controle sua grana,\nconquiste seus sonhos!"
        android:textColor="#0F0F0F"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/gateway_view_yellow"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_button_cadastrar"
        style="@style/FajBank.Button.Second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quero me cadastrar"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/main_button_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_button_login"
        style="@style/FajBank.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JÃ¡ tenho conta"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>