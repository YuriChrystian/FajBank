<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/singun_view_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/singun_textView_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:text="Seus Dados Pessoais"
        style="@style/FajBank.Text.Title.Main"
        app:layout_constraintBottom_toTopOf="@id/singup_textView_subTitulo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="156dp"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:id="@+id/singup_textView_subTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precisamos do seus dados para realizar o cadastro"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:textSize="20dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@id/singun_view_white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>